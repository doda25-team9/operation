{
  "uid": "sms-app-dashboard",
  "title": "SMS Checker - Application Metrics",
  "schemaVersion": 39,
  "timezone": "browser",
  "refresh": "5s",
  "templating": {
    "list": [
      {
        "name": "interval",
        "type": "interval",
        "query": "1m,5m,10m,30m,1h",
        "current": { "selected": true, "text": "1m", "value": "1m" },
        "label": "Interval",
        "hide": 0
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "SMS Request Volume (Counts per interval)",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 16, "h": 8 },
      "targets": [
        {
          "expr": "sum(increase(sms_requests_total[$interval]))",
          "legendFormat": "requests",
          "refId": "A"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "Active Users",
      "id": 2,
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 8 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false }
      },
      "targets": [
        { "expr": "sum(active_users)", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Avg Request Duration (seconds)",
      "description": "Calculated as Sum(Rate(Sum)) / Sum(Rate(Count))",
      "id": 3,
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(request_duration_sum[$interval])) / sum(rate(request_duration_count[$interval]))",
          "legendFormat": "avg duration",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Request Rate (req/sec)",
      "description": "The per-second traffic speed",
      "id": 4,
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(sms_requests_total[$interval]))",
          "legendFormat": "req/s",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Spam vs Ham Predictions (Counts per interval)",
      "id": 5,
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 10 },
      "options": {
        "displayMode": "bars",
        "barWidth": 0.8
      },
      "targets": [
        {
          "expr": "sum by (result) (increase(predictions_result_total[$interval]))",
          "legendFormat": "{{result}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "histogram",
      "title": "Request Duration (Frequency Distribution)",
      "id": 6,
      "gridPos": { "x": 0, "y": 26, "w": 12, "h": 10 },
      "targets": [
        {
          "expr": "sum by (le) (increase(request_duration_bucket[$interval]))",
          "format": "heatmap",
          "legendFormat": "{{le}}",
          "refId": "A"
        }
      ],
      "options": {
        "bucketOffset": 0,
        "combine": false,
        "showPercentiles": true,
        "tooltip": { "mode": "single", "sort": "none" },
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true }
      }
    },
    {
      "type": "histogram",
      "title": "SMS Length (Frequency Distribution)",
      "id": 7,
      "gridPos": { "x": 12, "y": 26, "w": 12, "h": 10 },
      "targets": [
        {
          "expr": "sum by (le) (increase(sms_length_bucket[$interval]))",
          "format": "heatmap",
          "legendFormat": "{{le}}",
          "refId": "A"
        }
      ],
      "options": {
        "bucketOffset": 0,
        "combine": false,
        "showPercentiles": true,
        "tooltip": { "mode": "single", "sort": "none" },
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true }
      }
    }
  ]
}