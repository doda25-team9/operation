{
  "uid": "sms-app-dashboard",
  "title": "SMS Checker - Application Metrics",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "SMS Requests Rate",
      "id": 1,
      "targets": [
        {
          "expr": "rate(sms_requests_total{endpoint=\"/sms\"}[5m])",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "Active Users",
      "id": 2,
      "targets": [
        {
          "expr": "active_users",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "values": false
        }
      }
    },
    {
      "type": "heatmap",
      "title": "Request Duration Histogram (seconds)",
      "id": 3,
      "targets": [
        {
          "expr": "sum(rate(request_duration_bucket{endpoint=\"/sms\"}[5m])) by (le)",
          "format": "heatmap",
          "refId": "A"
        }
      ]
    },
    {
      "type": "barchart",
      "title": "Spam vs Ham Predictions",
      "id": 4,
      "targets": [
        {
          "expr": "sum(rate(predictions_result_total[5m])) by (result)",
          "legendFormat": "{{result}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "heatmap",
      "title": "SMS Length Histogram (characters)",
      "id": 5,
      "targets": [
        {
          "expr": "sum(rate(sms_length_bucket[5m])) by (le)",
          "refId": "A"
        }
      ]
    }
  ]
}
